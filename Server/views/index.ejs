              }
            </script>

          <% }) %>
        <% } %>
        
      </div>

      

      <div id="poscart">
        <%listRequest.forEach(Request => {%>
          <input class="citem" type="button" value="Request <%= Request.id %>"  onclick="document.location.href= '/server/request/<%= Request._id %>'; cnt++;">
          </input>
        <%})%>
      </div>

      <div id="poscart2">
        <%listTable.forEach(Table => {%>
          <% if(Table.status){ %>
            <input class="citem1" type="button" value="Table <%= Table.id %>"  onclick="document.location.href= '/server/table/<%= Table._id %>'; cnt++;">
            </input>
          <% } else{ %>
            <input class="citem2" type="button" value="Table <%= Table.id %>"  onclick="document.location.href= '/server/table/<%= Table._id %>'; cnt++;">
            </input>
          <% } %>
        <%})%>
      </div>

      

      

 

      <div id="posreceipt"></div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  </body>
</html>

