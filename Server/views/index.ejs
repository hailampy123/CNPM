                  <th scope="col">Số lượng tối đa</th>
                  <th scope="col">Tình trạng</th>
              </tr>
              </thead>
              <tbody>
                  <tr>
                  <td><%= Tables.areaId %></td>
                  <td><%= Tables.maxGuest %></td>
                  
                  <td><%if(Tables.status) {%>
                      <%= "Trống" %>
                    <%} else {%>
                      <%= "Đầy" %>
                    <%}%>
                  </td>
                  </tr>
              </tbody>
            </table>
    
            
          
            <form method="GET" action="/server/table/update/<%= Tables._id %>" onclick = updateTable()>
              <input type="submit" value="Cập nhật" id="cempty">
            </form>

            <script>
              function updateTable() {
