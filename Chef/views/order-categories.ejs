<h1 class="pb-4">All Orders</h1>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Orders</a></li>
    <li class="breadcrumb-item active" aria-current="page">Explore Orders</li>
  </ol>
</nav>
<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
  <% if(typeof categoryByStatus !== 'undefined' && categoryByStatus.length > 0) { %>
  <% categoryByStatus.forEach(function(order, index){ %>
  <% if(order.status == "waiting") { %>
  <a href="/orderdetailWait/<%= order._id %>" class="col text-center category__link">
    <div class="category__img category__img--large shadow">
      <img src="/img/item.jpeg" alt="<%= order.id %>" loading="lazy">
    </div>
    <div class="pt-1">OrderID: <%= order.id %></div>
  </a>
  <% } else { %>
  <a href="/orderdetailConf/<%= order._id %>" class="col text-center category__link">
    <div class="category__img category__img--large shadow">
      <img src="/img/item.jpeg" alt="<%= order.id %>" loading="lazy">
    </div>
    <div class="pt-1">OrderID: <%= order.id %></div>
  </a>
  <% } %>
  
  <% }) %>
  <% } else { %>
  <p>No items found.</p>
  <% } %>
</div>