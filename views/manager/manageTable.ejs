<!DOCTYPE html>
<html lang='en'>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Manage Table</title>
        <link href="/css/manager/manageTable.css" rel="stylesheet">
        <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
        <script src="/scripts/jquery.min.js"></script>
        <script src="/scripts/manager/createTable.js"></script>
    </head>
    <body>
        <header>
            <div class="inner">
                <div class="logo">
                    <div>
                        <a href="/manager"><img src="/images/logo.png" alt="MU restaurant"></a>  
                    </div>
                </div>
                <nav>
                  <li><a href="/manager/manageEmployee">Manage Employee</a></li>
                  <li><a href="/manager/manageFood">Manage Food</a></li>
                  <li><a href="/manager/manageTable">Manage Table</a></li>
                  <li><span><button  style="border: 0; border-radius: 5px;" class="button" onclick=logOut()>Logout</button></span></li>       
                </nav>
            </div>
        </header>
        <div class="create-form">
            <form action='/manager/manageTable' method="POST">
                <div class="container">
                    <img class="close-button" src="/images/close-button.png">
                    <h1>Table Form</h1>
                    <p>Please fill out the form</p>
                    <hr>

                    <label for='areaId'></label>
                    <b>Area ID</b>
                    <input type='text' placeholder='Default is "1"' name='areaId' value="1">

                    <label for='maxGuest'></label>
                    <b>Max Guest</b>
                    <input type='text' placeholder='Max guest' name='maxGuest'>

                    <div class="status">
                        <b>Status</b>
                        <select name="status">
                            <option value="true">Available</option>
                            <option value="false">Unavailable</option>
                        </select>
                    </div>
                    
                </div>

                <div class="clearfix">
                    <button class="signupbtn" type="submit">Create</button>
                </div>
            </form>
        </div>

        <div class="container-main">
            <h1>
                Manage Table     
            </h1>
            <span>
                <button id="createTable">Create Table</button>
            </span>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Max Guest</th>
                        <th>Area ID</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <%tables.forEach(table => {%>
                        <tr>
                            <td><%= table.id %></td>
                            <td><%= table.maxGuest %></td>
                            <td><%= table.areaId %></td>
                            <td><%= table.status %></td>
                        </tr>
                    <%})%>
                </tbody>
            </table>
        </div>
        <script>
            function logOut(){
              document.cookie = 'userID' + "=;expires=Thu, 01 Jan 1970 00:00:00 GMT;path=/;";
              window.location = '/';
            }
          </script>
        
    </body>
    

</html>